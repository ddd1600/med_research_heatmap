<p id="notice"><%= notice %></p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Spreadsheets Loaded</b>
  <% @user.spreadsheets.each do |s| %>
    <%= link_to s.name spreadsheet_path(s.id) %>
  <% end %>
  <% if @user.spreadsheets.count == 0 %>
    <br/>None added yet. <%= link_to "Load your first CSV", new_spreadsheet_path %>
  <% end %>
  
</p>


<%= link_to 'Edit', edit_user_path(@user), :class => 'btn' %> |
<%= link_to 'Back', users_path, :class => 'btn' %>
